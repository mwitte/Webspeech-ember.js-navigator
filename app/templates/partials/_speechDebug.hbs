<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well">
                <h2>Debug</h2>
                <div class="row">
                    <div class="col-md-3">
                        <h3>Events</h3>
                        <ul>
                            {{#each Blog.SpeechRecognition.events}}
                                <li>
                                    <b>{{name}}</b> - {{count}}
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h3>Settings</h3>
                        <b>Current Keyword: </b> {{Blog.SpeechCommander.keyWord}}
                    </div>
                    <div class="col-md-6">
                        <h3>Last Result</h3>
                        <ul>
                            {{#each Blog.SpeechRecognition.current}}
                                <li>
                                    <b>{{transcript}}</b> - {{confidence}}
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3>Result History</h3>
                        <ul>
                            {{#each Blog.SpeechRecognition.content}}
                                <li>
                                    <ul>
                                        {{#each this}}
                                            <li>
                                                <b>{{transcript}}</b> - {{confidence}}
                                            </li>
                                        {{/each}}
                                    </ul>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>